<%= form_with model: @mountain, local: true do |f|%>

  <div class="field">
    <%= f.label :name, "ユーザー名" %><br />
    <%= f.text_field :name, id:"user_name" %>
  </div>

  <div class="field">
    <%= f.label :profile, "プロフィール" %><br />
    <%= f.text_area :profile, class: :form__text, id:"user_profile" %>
  </div>

  <div class="field">
    <%= f.label :mountain_name, "山の名称" %><br />
    <%= f.text_field :mountain_name, id:"mountain_name" %>
  </div>

  <div class="field">
    <%= f.label :level, "標高・登山難易度" %><br />
    <%= f.text_area :level, class: :form__text, id:"level" %>
  </div>

  <div class="field">
    <%= f.label :point, "登って良かったところ" %><br />
    <%= f.text_area :point, class: :form__text, id:"point" %>
  </div>

  <div class="field">
    <%= f.label :image, "山の画像" %><br />
    <%= f.file_field :image, id:"mountain_image" %>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>
<% end %>