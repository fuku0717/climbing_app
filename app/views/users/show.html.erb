<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= "#{@user.name}さんの情報"%>
      </h2>
      <% if user_signed_in? && current_user.id %>
        <div class="mountain__manage">
          <%= link_to "編集する", user_path(@user.mountains), method: :get, class: :mountain__user %>
        </div>
      <% end %>
      <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">名前</th>
            <td class="table__col2"><%= @user.name %></td>
          </tr>
          <tr>
            <th class="table__col1">プロフィール</th>
            <td class="table__col2"><%= @user.profile %></td>
          </tr>
          <tr>
            <th class="table__col1">在住都道府県</th>
            <td class="table__col2"><%= @user.prefecture %></td>
          </tr>
          <tr>
            <th class="table__col1">登山歴</th>
            <td class="table__col2"><%= @user.history %></td>
          </tr>
        </tbody>
      </table>
      <h2 class="page-heading">
        <%= "#{@user.name}さんの投稿内容"%>
      </h2>
      <div class="user__card">
        <%= render partial: 'mountains/mountain', collection: @user.mountains %>
      </div>
    </div>
  </div>
</div>